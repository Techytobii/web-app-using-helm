pipeline {
    agent any

    environment {
        KUBECONFIG = credentials('kubeconfig-file') // store kubeconfig as Jenkins secret file
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/<your-username>/<your-repo>.git'
            }
        }

        stage('Build & Lint Helm Chart') {
            steps {
                sh '''
                helm lint .
                '''
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                sh '''
                helm upgrade --install web-app . \
                    --namespace default \
                    --create-namespace
                '''
            }
        }
    }
}
